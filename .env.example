# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Anthropic API Key (optional - Claude Code can use its own config)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Comma-separated list of allowed Telegram user IDs
# Get your ID from @userinfobot on Telegram
ALLOWED_USER_IDS=123456789

# Working directory for Claude Code (optional, defaults to home directory)
# WORKING_DIRECTORY=/path/to/your/projects

# ===================
# MCP Server API Keys
# ===================
# These keys are used in ~/.claude/settings.json for MCP servers

# Brave Search API - https://brave.com/search/api/ (2,000 free queries/month)
# BRAVE_API_KEY=your_brave_api_key_here

# Tavily Search API - https://tavily.com/ (1,000 free queries/month)
# TAVILY_API_KEY=your_tavily_api_key_here

# GitHub Personal Access Token - https://github.com/settings/tokens
# GITHUB_TOKEN=your_github_token_here
